[user]
	email = fenekku@fenekku.com
	name = Guillaume Viger

[alias]
  a = add
  addinteractive = add --patch
  aliases = "!git config --get-regexp alias"
  br = branch
  branches = branch --all
  # cleanup = "!git branch | awk '!/master|develop/' | xargs git branch -d"
  cleanup = "!f(){ git checkout master ; for b in $(git branch --no-contains); do if [ ! $(git cherry -v upstream/master $b | grep \"^+\") ]; then git branch -D $b; fi; done };f"
  co = checkout
  ci = commit
  d = diff
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  praise = blame
  search = log --all --grep
  showfiles = show --pretty="format:" --name-only
  squash = rebase --interactive
  st = status --short
  stashes = stash list
  sub = reset --quiet HEAD --
  sync = !git checkout master && git fetch --all --prune && git merge --ff-only upstream/master && git submodule update --init --recursive && git checkout -
  tags = tag
  uncommit = reset --mixed
  cp = cherry-pick
  lrb = "!f() { git ls-remote \"$1\" | grep -e refs/heads/.*$ ; }; f"

[color]
  ui = true

[merge]
  tool = code

[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[core]
	pager = git-split-diffs --color | less -RFX
